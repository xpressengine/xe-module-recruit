<query id="getRecruits" action="select">
    <tables>
    	<table name="modules" />
    </tables>
    <columns>
    	<column name="*" />
    </columns>
    <conditions>
         <condition operation="equal" column="module" default="recruit" filter="number" />
    </conditions>
    <navigation>
        <index var="sort_index" default="regdate" order="desc" />
        <list_count var="list_count" default="20" />
        <page_count var="page_count" default="10" />
        <page var="page" default="1" />
    </navigation>
</query>